<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.calcs.fragment.ListCalcsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_aplicação_mensal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:background="@drawable/style_relative_layout">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_airbnb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_marginBottom="@dimen/margin_12dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:src="@drawable/airbnb_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_card_aplicação_mensal"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/dot_default"
            android:fontFamily="@font/poppins"
            android:foregroundGravity="center_vertical"
            android:layout_marginStart="@dimen/margin_11dp"
            app:layout_constraintStart_toEndOf="@id/icon_airbnb"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_aplicacao_unica"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/card_aplicação_mensal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:background="@drawable/style_relative_layout">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_aplicacao_unica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_marginBottom="@dimen/margin_12dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:src="@drawable/icon_opcao_unica"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_aplicacao_unica"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/dot_default"
            android:fontFamily="@font/poppins"
            android:foregroundGravity="center_vertical"
            android:layout_marginStart="@dimen/margin_11dp"
            app:layout_constraintStart_toEndOf="@id/icon_aplicacao_unica"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_correcao_valor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/card_aplicacao_unica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:background="@drawable/style_relative_layout">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_correcao_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_marginBottom="@dimen/margin_12dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:src="@drawable/icon_correcao_valor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correção de valor por um índice"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/dot_default"
            android:fontFamily="@font/poppins"
            android:foregroundGravity="center_vertical"
            android:layout_marginStart="@dimen/margin_11dp"
            app:layout_constraintStart_toEndOf="@id/icon_correcao_valor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_conversao_taxas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/card_correcao_valor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:background="@drawable/style_relative_layout">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_conversao_taxas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_marginBottom="@dimen/margin_12dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:src="@drawable/icon_conversao_taxas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_conversao_taxas"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/dot_default"
            android:fontFamily="@font/poppins"
            android:foregroundGravity="center_vertical"
            android:layout_marginStart="@dimen/margin_11dp"
            app:layout_constraintStart_toEndOf="@id/icon_conversao_taxas"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>