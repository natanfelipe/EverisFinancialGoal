<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="ui.index.IndexFragment"
    android:fillViewport="true"
    android:background="@color/grey">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">
        <include
            android:id="@+id/index_nav_bar"
            layout="@layout/navbar_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/txt_indice_correcao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="@string/txt_indice_correcao"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_calculadoras"
            android:layout_marginTop="@dimen/margin_edit"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_txt_monthly"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/index_nav_bar"/>
        <Spinner
            android:id="@+id/spinner_indice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:textSize="@dimen/text_size_calculadoras"
            android:elevation="@dimen/elevation"
            android:fontFamily="@font/roboto"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="160dp"
            android:layout_marginTop="@dimen/margin_5p"
            app:layout_constraintTop_toBottomOf="@id/txt_indice_correcao"
            app:layout_constraintStart_toStartOf="parent" />
        <Button
            android:id="@+id/btn_mudar_indice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mudar"
            android:textColor="@color/btn_index_mudar"
            android:padding="20dp"
            android:backgroundTint="@color/grey_button"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="@dimen/margin_5p"
            app:layout_constraintStart_toEndOf="@+id/spinner_indice"
            app:layout_constraintTop_toBottomOf="@+id/txt_indice_correcao"
            app:layout_constraintEnd_toEndOf="parent"
            />






        <TextView
            android:id="@+id/txt_porcent_ano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="@string/txt_porcentagem_ano"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_calculadoras"
            android:layout_marginTop="150dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_txt_monthly"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/index_nav_bar"/>
        <EditText
            android:id="@+id/edt_porcentagem_ano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:elevation="@dimen/elevation"
            android:inputType="numberDecimal"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_5p"
            android:paddingStart="@dimen/padding_text_calculadoras"
            android:textSize="@dimen/text_size_calculadoras"
            app:layout_constraintTop_toBottomOf="@+id/txt_porcent_ano"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/txt_valor_final"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="@string/txt_valor_final"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_calculadoras"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_txt_monthly"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_porcentagem_ano"/>
        <TextView
            android:id="@+id/valor_final"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="@color/dot_default"
            android:elevation="@dimen/elevation"
            android:inputType="numberDecimal"
            android:paddingStart="@dimen/padding_text_calculadoras"
            android:textSize="@dimen/text_size_calculadoras"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_5p"
            app:layout_constraintTop_toBottomOf="@+id/txt_valor_final"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <FrameLayout
            android:id="@+id/loading_frameLayout_index"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/frame_background"
            android:elevation="@dimen/elevetionLoginFrameLoading"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar
                android:id="@+id/progressBar_monthly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>