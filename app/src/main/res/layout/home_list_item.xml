<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_14dp"
    app:cardCornerRadius="@dimen/margin_5p"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="109dp"
        android:layout_height="124dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/slide3">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_card"
            android:layout_width="@dimen/img_card_home24dp"
            android:layout_height="@dimen/img_card_home24dp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/margin_5p"
            android:layout_marginEnd="@dimen/margin_9dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:fontFamily="@font/poppins"
            android:textSize="@dimen/text_size_16_sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>