<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza_claro">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="136dp"
        android:layout_height="70dp"
        android:layout_marginBottom="476dp"
        android:gravity="center_vertical|end"
        android:text="Taxa Mensal:"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/taxmensal"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="136dp"
        android:layout_height="70dp"
        android:layout_marginBottom="13dp"
        android:gravity="center_vertical|end"
        android:text="Taxa Anual:"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/taxanual"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/taxmensal"
        android:layout_width="225dp"
        android:layout_height="70dp"
        android:background="@drawable/rounded_edittext"
        android:backgroundTint="@color/dot_default"
        android:elevation="18dp"
        android:focusable="false"
        android:inputType=""
        android:paddingStart="21dp"
        android:paddingEnd="21dp"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="185dp" />

    <EditText
        android:id="@+id/taxanual"
        android:layout_width="225dp"
        android:layout_height="70dp"
        android:background="@drawable/rounded_edittext"
        android:backgroundTint="@color/light_grey"
        android:elevation="18dp"
        android:inputType=""
        android:paddingStart="21dp"
        android:paddingEnd="21dp"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="102dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/headNavBar"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnBackHome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:paddingStart="@dimen/paddind_star"
            android:paddingEnd="@dimen/paddind_end"
            android:src="@drawable/ic_baseline_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="conversor de taxas"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>